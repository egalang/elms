<odoo>
    <data>

        <report
            id="report_loan_summary_html"
            string="Loan Summary HTML"
            model="loans.summary"
            report_type="qweb-html"
            name="loans.report_loan_summaries"
            file="loans.report_loan_summaries"
        />

        <report
            id="report_loan_summary"
            string="Loan Summary"
            model="loans.summary"
            report_type="qweb-pdf"
            name="loans.report_loan_summaries"
            file="loans.report_loan_summaries"
            attachment_use="True"
            attachment="'Loan Summaries.pdf'"
        />

        <template id="report_loan_summaries">
            <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2>Loan Summaries</h2>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Company</th>
                                        <th>Bank</th>
                                        <th>Credit Line</th>
                                        <th>Total Principal Amount</th>
                                        <th>Available Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><span t-field="doc.company_id.name"/></td>
                                        <td><span t-field="doc.bank_id.name"/></td>
                                        <td><span t-field="doc.credit_line"/></td>
                                        <td><span t-field="doc.principal"/></td>
                                        <td><span t-field="doc.available_balance"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </div>
        </template>


    </data>
</odoo>