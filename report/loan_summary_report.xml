<odoo>
    <data>
        <report
            id="report_loan_summary"
            model="loans.summary"
            string="Loan Summary"
            name="loans.report_loan_summaries"
            report_type="qweb-pdf"
            file="loans.report_loan_summaries"
            menu="True"
        />
        <template id="report_loan_summaries">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="summaries">
                    <div class="page">
                        <h2>Loan Summary</h2>
                        <p>Bank ID: <span t-field="summary.bank_id.name"/></p>
                        <p>Company ID: <span t-field="summary.company_id.name"/></p>
                        <p>Principal: <span t-field="summary.principal"/></p>
                        <p>Credit Line: <span t-field="summary.credit_line"/></p>
                        <p>Available Balance: <span t-field="summary.available_balance"/></p>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>


